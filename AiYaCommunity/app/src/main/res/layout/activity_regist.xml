<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7dede"
    tools:context="com.example.nanchen.newsdemo.mine.RegistActivity">

    <include layout="@layout/menu_layout">

    </include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   输入手机号"
        android:id="@+id/username_text1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="   输入验证码"
            android:id="@+id/yanzhen_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_get_yanzhen"
            android:background="#f1b2b2"
            android:text="获取验证码"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   输入密码"
        android:inputType="textPassword"
        android:id="@+id/pwd_text1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_regist1"
        android:text="注   册"
        android:background="#f1b2b2"/>


</LinearLayout>
